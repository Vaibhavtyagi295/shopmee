<div class="product">
  <div class="product-image">
    <img src="/uploads/<%=product.image %>" alt="<%= product.name %>">
  </div>
  <div class="product-details">
    <h1><%= product.name %></h1>
    <p><%= product.description %></p>
    <p>Delivery Time <%= product.deliveryTime %> days</p>
    <h2><strong>Price:</strong> $<%= product.price %></h2>
    <button data-pizza="<%= JSON.stringify(product) %>"
      class="add-to-card buy-now-button">
      <span>+</span>
      <span class="">Buy now</span>
  </button>
  </div>
</div>

